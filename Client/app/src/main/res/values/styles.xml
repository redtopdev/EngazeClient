<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ETMaterialTheme.ActionBar.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ETMaterialTheme.Toolbar">
        <item name="android:elevation">5dip</item>
        <item name="colorControlNormal">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/icon</item>
    </style>

    <style name="ETMaterialTheme.ActionBar.Light" parent="ETMaterialTheme.ActionBar">
        <item name="colorControlNormal">@color/icon</item>
        <item name="android:textColorSecondary">@color/icon</item>
        <item name="android:textColor">@color/icon</item>
    </style>

    <style name="NoActionBarDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ETMaterialTheme.ActionBar.TabText">
        <item name="android:textColor">@color/selector_tab_text</item>
    </style>

    <style name="ETMaterialTheme" parent="ETMaterialTheme.Base">
        <item name="android:actionBarStyle">@style/ETMaterialTheme.ActionBar</item>
        <item name="colorControlNormal">@color/colorBackground</item>
        <item name="android:actionBarTabTextStyle">@style/ETMaterialTheme.ActionBar.TabText</item>
        <item name="actionModeStyle">@style/ETMaterialTheme.ActionMode</item>
        <item name="android:actionMenuTextColor">@color/colorGreen</item>
        <!-- <item name="android:actionOverflowButtonStyle">@style/ETMaterialThemeActionButtonOverflow</item> -->

    </style>

    <style name="radionbutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton_drawable</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- <style name="ETMaterialThemeActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow"> -->
    <!-- <item name="android:paddingTop">2dip</item> -->
    <!-- <item name="android:paddingBottom">2dip</item> -->
