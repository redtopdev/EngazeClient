<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorListBackground" >

    <ImageView
        android:id="@+id/ic_location_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/paddinghalf"
        android:background="@drawable/ic_event_black_24dp"
        android:backgroundTint="@color/divider_secondary" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ic_location_item"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_name"
            style="@style/PrimaryTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="@dimen/paddingQuarter"
            android:paddingBottom="0dip"
            android:paddingLeft="@dimen/paddinghalf"
            android:paddingTop="@dimen/paddinghalf" />

        <TextView
            android:id="@+id/event_initiator"
            style="@style/SecondaryTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:paddingLeft="@dimen/paddinghalf"
            android:paddingTop="0dip"
            android:textColor="#006400"
            android:textSize="@dimen/small_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/event_view"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/paddinghalf"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_view"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_leave"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/paddinghalf"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_leave"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_end"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/paddinghalf"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_end"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>