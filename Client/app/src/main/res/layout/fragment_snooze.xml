<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dip"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/SnoozeOffset"
        style="@style/CategoryHeader"
        android:text="Extend by" />

    <View style="@style/Divider" />

    <EditText
        android:id="@+id/SnoozeValue"
        style="@style/PrimaryTextStyle"
        android:background="@null"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <View style="@style/Divider" />

    <TextView
        android:id="@+id/SnoozeMinutes"
        style="@style/PrimaryTextStyle"
        android:layout_width="fill_parent"
        android:tag="minute"
        android:text="@string/minuteslater" />

    <View style="@style/Divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_event_Snooze"
            style="@style/FlatButton"
            android:layout_alignParentStart="true"
            android:text="Cancel" />

        <Button
            android:id="@+id/save_event_Snooze"
            style="@style/FlatButton"
            android:text="Extend" />
    </RelativeLayout>

</LinearLayout>