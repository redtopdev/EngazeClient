<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.Android.com/apk/res-auto"
    android:id="@+id/cv_user_event_details"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:paddingLeft="0dp"    
    card_view:cardElevation="0dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddinghalf"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginTop="@dimen/paddinghalf"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_user_event_details"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:background="@drawable/ic_timer_primary_color"           
            android:text="On" />

        <TextView
            android:id="@+id/txt_user_event_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddinghalf"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/event_detail_divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content"       
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@color/divider_secondary" >
    </View>
</android.support.v7.widget.CardView>