<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.Android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_double" >

    <RelativeLayout
        android:id="@+id/rl_home_sharemylocation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_arrow_sml"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_arrow_drop_up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginLeft="@dimen/paddinghalf"
            android:layout_marginRight="@dimen/paddinghalf"
            android:layout_marginTop="20dp"
            android:background="@color/colorListBackground"
            android:elevation="5dp" >

            <TextView
                android:id="@+id/txt_sharemylocation_header"
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/paddingQuarter"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:text="@string/header_home_notification_sharemylocation" />

            <!-- <ImageButton -->
            <!-- android:id="@+id/img_remove_sharing" -->
            <!-- style="@style/RightCircularImageStyle" -->
            <!-- android:layout_width="42dp" -->
            <!-- android:layout_height="42dp" -->
            <!-- android:layout_alignParentTop="true" -->
            <!-- android:layout_marginRight="@dimen/padding" -->
            <!-- android:layout_marginTop="@dimen/padding" -->
            <!-- android:padding="@dimen/padding" -->
            <!-- android:paddingBottom="0dp" -->
            <!-- android:src="@drawable/ic_clear_white_18dp" /> -->

            <ListView
                android:id="@+id/home_sharemylocation_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sharemylocation_header"
                android:divider="@drawable/home_list_divider"
                android:dividerHeight="1dp"
                android:paddingBottom="@dimen/paddinghalf" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>