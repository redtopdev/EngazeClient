<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal" >

    <com.redtop.engaze.customeviews.CircularImageView
        android:id="@+id/group_member_img"
        style="@style/CircularProfileStyle" />

    <TextView
        android:id="@+id/member_name"
        style="@style/ListTextStyle" />

    <TextView
        android:id="@+id/member_contact_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:background="@drawable/contact_invite"
        android:text="INVITE"
        android:textColor="#FAFAFA"
        android:textSize="14sp" />

</RelativeLayout>