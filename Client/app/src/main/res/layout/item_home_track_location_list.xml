<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.redtop.engaze.customeviews.CircularImageView
        android:id="@+id/track_location_contact_icon"
        style="@style/CircularProfileStyle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/track_location_contact_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/track_location_contact_name"
            style="@style/PrimaryTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="@dimen/paddingQuarter"
            android:gravity="center_vertical"
            android:paddingBottom="0dip"
            android:paddingLeft="0dip"
            android:paddingTop="@dimen/paddinghalf" />

        <TextView
            android:id="@+id/track_location_time_info"
            style="@style/SecondaryTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/paddinghalf"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dip"
            android:paddingLeft="0dip"
            android:paddingTop="0dip"
            android:textSize="@dimen/small_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/track_location_contact_view"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_view"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/track_location_contact_poke"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/paddinghalf"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_poke"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/track_location_contact_extend"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/paddinghalf"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_extend"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/track_location_contact_stop"
                style="@style/SecondaryTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dip"
                android:background="@drawable/selector_home_list_item_button"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/paddinghalf"
                android:paddingRight="@dimen/paddinghalf"
                android:paddingTop="@dimen/paddinghalf"
                android:text="@string/button_home_notification_stop"
                android:textColor="@color/primary"
                android:textSize="@dimen/extra_small_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>